{
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "article_cover": {
        "type": "Image",
        "config": {
          "label": "Article image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "uid": {
        "type": "UID",
        "config": {
          "label": "Article ID",
          "placeholder": ""
        }
      },
      "article_title": {
        "type": "Text",
        "config": {
          "label": "Article title",
          "placeholder": ""
        }
      },
      "article_content": {
        "type": "StructuredText",
        "config": {
          "label": "Article content",
          "placeholder": "Hello, la Guadeloupe est magnifique",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "article_author": {
        "type": "Link",
        "config": {
          "label": "Article author",
          "select": "document",
          "customtypes": [
            "author"
          ]
        }
      },
      "preview": {
        "type": "Text",
        "config": {
          "label": "Preview",
          "placeholder": "Article prieview..."
        }
      }
    }
  }
}